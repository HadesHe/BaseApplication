<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_splash"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.avenging.hades.client.splash.SplashActivity">

   <ImageView
       android:id="@+id/ivSplashImage"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:scaleType="fitXY"
       android:src="@drawable/night"
       />
    <TextView
        android:id="@+id/tvSplashAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/splash_top_margin"
        />
    <TextView
        android:id="@+id/tvSplashSlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/splash_logan"
        />

</RelativeLayout>
